{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mecs-standard.org/schema/v1.0/module.schema.json",
  "title": "MECS Module Schema",
  "description": "Standalone module that can be imported into courses",
  "type": "object",
  "required": ["mecsVersion", "type", "id", "title", "sections"],
  "properties": {
    "mecsVersion": {
      "type": "string",
      "description": "Version of MECS standard this module conforms to",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["0.2.0"]
    },
    "type": {
      "type": "string",
      "const": "mecs:module",
      "description": "Type identifier for this content"
    },
    "id": {
      "type": "string",
      "description": "Unique identifier for this module",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "description": "Module title",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Module description"
    },
    "metadata": {
      "type": "object",
      "description": "Module metadata",
      "properties": {
        "author": {
          "type": "string",
          "description": "Module author or creator"
        },
        "institution": {
          "type": "string",
          "description": "Educational institution"
        },
        "subject": {
          "type": "string",
          "description": "Subject area (e.g., Mathematics, Computer Science)"
        },
        "level": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced", "expert"],
          "description": "Difficulty level"
        },
        "language": {
          "type": "string",
          "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
          "description": "ISO 639-1 language code",
          "examples": ["en", "es", "en-US", "fr-CA"]
        },
        "duration": {
          "type": "object",
          "description": "Estimated time to complete",
          "properties": {
            "value": {
              "type": "number",
              "minimum": 0
            },
            "unit": {
              "type": "string",
              "enum": ["minutes", "hours", "days", "weeks"]
            }
          },
          "required": ["value", "unit"]
        },
        "prerequisites": {
          "type": "array",
          "description": "Prerequisites for this module",
          "items": {
            "type": "string"
          }
        },
        "learningObjectives": {
          "type": "array",
          "description": "What students will learn",
          "items": {
            "type": "string"
          }
        },
        "tags": {
          "type": "array",
          "description": "Searchable tags",
          "items": {
            "type": "string"
          }
        },
        "license": {
          "type": "string",
          "description": "Content license (e.g., CC-BY-4.0, MIT, All Rights Reserved)",
          "examples": ["CC-BY-4.0", "CC-BY-SA-4.0", "MIT", "All Rights Reserved"]
        },
        "version": {
          "type": "string",
          "description": "Module content version"
        }
      }
    },
    "sections": {
      "type": "array",
      "description": "Module sections",
      "items": {
        "$ref": "section.schema.json"
      },
      "minItems": 1
    },
    "extensions": {
      "type": "object",
      "description": "Custom extensions to the standard",
      "additionalProperties": true
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    }
  },
  "additionalProperties": false
}
