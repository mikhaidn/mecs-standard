{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mecs-standard.org/schema/v1.0/content-types/text.schema.json",
  "title": "MECS Text Content Type",
  "description": "Rich text content (markdown, HTML, plain text)",
  "type": "object",
  "required": ["format", "text"],
  "properties": {
    "format": {
      "type": "string",
      "enum": ["markdown", "html", "plain"],
      "description": "Text format",
      "default": "markdown"
    },
    "text": {
      "type": "string",
      "description": "The actual text content",
      "minLength": 0
    },
    "resources": {
      "type": "array",
      "description": "External resources referenced in the text (images, links)",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["image", "link", "file"]
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "alt": {
            "type": "string",
            "description": "Alt text for accessibility"
          }
        },
        "required": ["id", "type", "url"]
      }
    }
  },
  "additionalProperties": false
}
