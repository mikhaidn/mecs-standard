{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mecs-standard.org/schema/v1.0/content-types/document.schema.json",
  "title": "MECS Document Content Type",
  "description": "External document references (PDFs, slides, worksheets)",
  "type": "object",
  "required": ["url", "title"],
  "properties": {
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the document"
    },
    "title": {
      "type": "string",
      "description": "Document title",
      "minLength": 1
    },
    "docType": {
      "type": "string",
      "enum": ["pdf", "presentation", "spreadsheet", "word", "google-doc", "other"],
      "description": "Type of document",
      "default": "other"
    },
    "description": {
      "type": "string",
      "description": "Document description"
    },
    "fileSize": {
      "type": "number",
      "description": "File size in bytes",
      "minimum": 0
    },
    "pages": {
      "type": "number",
      "description": "Number of pages (if applicable)",
      "minimum": 1
    },
    "downloadable": {
      "type": "boolean",
      "description": "Whether the document can be downloaded",
      "default": true
    },
    "thumbnail": {
      "type": "string",
      "format": "uri",
      "description": "URL to document preview/thumbnail"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
      "description": "Document language"
    }
  },
  "additionalProperties": false
}
