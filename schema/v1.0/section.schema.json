{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://mecs-standard.org/schema/v1.0/section.schema.json",
  "title": "MECS Section Schema",
  "description": "Section/module within a course",
  "type": "object",
  "required": ["id", "title", "contentType", "content"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this section",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "description": "Section title",
      "minLength": 1
    },
    "order": {
      "type": "number",
      "description": "Display order within the course (0-indexed)",
      "minimum": 0
    },
    "contentType": {
      "type": "string",
      "description": "Type of content (namespaced using colon separator)",
      "pattern": "^[a-z0-9-]+:[a-z0-9-]+$",
      "examples": [
        "mecs:text",
        "mecs:video",
        "mecs:document",
        "mecs:quiz",
        "mecs:assignment",
        "custom:interactive-simulation"
      ]
    },
    "content": {
      "type": "object",
      "description": "Content data (structure depends on contentType)"
    },
    "metadata": {
      "type": "object",
      "description": "Section-specific metadata",
      "properties": {
        "duration": {
          "type": "object",
          "description": "Estimated time to complete this section",
          "properties": {
            "value": {
              "type": "number",
              "minimum": 0
            },
            "unit": {
              "type": "string",
              "enum": ["seconds", "minutes", "hours"]
            }
          },
          "required": ["value", "unit"]
        },
        "difficulty": {
          "type": "string",
          "enum": ["easy", "medium", "hard"],
          "description": "Relative difficulty of this section"
        },
        "learningObjectives": {
          "type": "array",
          "description": "What students will learn in this section",
          "items": {
            "type": "string"
          }
        },
        "keywords": {
          "type": "array",
          "description": "Keywords for search and indexing",
          "items": {
            "type": "string"
          }
        },
        "isOptional": {
          "type": "boolean",
          "description": "Whether this section is optional",
          "default": false
        },
        "prerequisites": {
          "type": "array",
          "description": "IDs of sections that must be completed first",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    }
  },
  "additionalProperties": false
}
